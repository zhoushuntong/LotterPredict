<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item><!--toolbar标题字体大小-->
        <item name="android:textColor">#ffffff</item><!--toolbar标题字体颜色-->
    </style>

    <declare-styleable name="DecimalEditText">
        <attr name="minNumber" format="integer" />
        <attr name="maxNumber" format="integer" />
    </declare-styleable>

</resources>
